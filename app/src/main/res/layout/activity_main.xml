<?xml version="1.0" encoding="utf-8"?>
<!-- FOURTH LAYOUT: CONSTRAINT -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_eletric_car"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="680dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_tab_cars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subtitle_all_cars"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_tab_fav"
        app:layout_constraintTop_toBottomOf="@id/tv_title"/>

    <TextView
        android:id="@+id/tv_tab_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subtitle_fav"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/tv_tab_cars"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_tab_cars"/>

    <ImageView
        android:id="@+id/iv_01"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/carro_eletrico_01"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tab_cars"
        />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="@string/field_price"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/iv_01"
        app:layout_constraintStart_toStartOf="@id/iv_01"
        />

    <TextView
        android:id="@+id/tv_price_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/field_price_val"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/tv_price"
        app:layout_constraintStart_toEndOf="@id/tv_price"
        />

    <TextView
        android:id="@+id/tv_battery"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="@string/field_battery"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_price"
        app:layout_constraintStart_toStartOf="@id/tv_price"
        />

    <TextView
        android:id="@+id/tv_battery_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/field_battery_val"
        app:layout_constraintTop_toTopOf="@id/tv_battery"
        app:layout_constraintStart_toEndOf="@id/tv_battery"
        />

    <TextView
        android:id="@+id/tv_power"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="@string/field_power"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_battery"
        app:layout_constraintStart_toStartOf="@id/tv_battery"
        />

    <TextView
        android:id="@+id/tv_power_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/field_power_val"
        app:layout_constraintTop_toTopOf="@id/tv_power"
        app:layout_constraintStart_toEndOf="@id/tv_power"
        />

    <TextView
        android:id="@+id/tv_charge"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="@string/field_charge"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_power"
        app:layout_constraintStart_toStartOf="@id/tv_power"
        />

    <TextView
        android:id="@+id/tv_charge_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/field_charge_val"
        app:layout_constraintTop_toTopOf="@id/tv_charge"
        app:layout_constraintStart_toEndOf="@id/tv_charge"
        />

    <EditText
        android:id="@+id/et_price_km"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/filed_inp_price_per_km"
        android:inputType="numberDecimal"
        android:maxLength="10"
        android:maxLines="2"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_charge"/>

    <EditText
        android:id="@+id/et_traveled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/filed_inp_km_traveled"
        android:inputType="numberDecimal"
        android:maxLength="10"
        android:maxLines="2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/et_price_km"/>

    <Button
        android:id="@+id/bt_calc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_calculate"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/et_traveled"
        />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/field_result_of_calculation"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/bt_calc"
        app:layout_constraintStart_toStartOf="@id/tv_charge"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_result_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/tv_result"
        app:layout_constraintStart_toEndOf="@id/tv_result"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

